<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
            crossorigin="anonymous"
        />
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.0/font/bootstrap-icons.css"
        />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Cormorant+SC:wght@300&display=swap"
            rel="stylesheet"
        />
        <link rel="stylesheet" href="/css/style.css" />
    </head>

    <body>
        <!--Header start here-->
        <%- include("./partials/header.ejs") %>
        <section id="banner" class="pt-3">
            <div class="container">
                <div class="row">
                    <div class="col-md-8"></div>
                    <div class="col-md-4"></div>
                </div>
            </div>
            <img src="media/border1.png" alt="" id="banner-border" />
        </section>
        <!--Header end here-->

        <section id="moredetails">
            <div class="container">
                <div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">
                        <h2 class="text-center py-3">Testimonial Post here</h2>
                        <form
                            action="/testipost"
                            method="post"
                            enctype="multipart/form-data"
                        >
                            <div class="mb-3">
                                <label class="form-label">Name</label>
                                <input
                                    class="form-control"
                                    type="text"
                                    id="nameinp"
                                    name="name"
                                />
                                <div>
                                    <p id="warn1">Max 25 character</p>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Quote</label>
                                <input
                                    class="form-control"
                                    type="text"
                                    name="quotes"
                                    id="quotesinp"
                                />
                                <div>
                                    <p id="warn2">Max 100 character</p>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label"
                                    >Testimonial Image</label
                                >
                                <input
                                    class="form-control"
                                    type="file"
                                    name="testiimg"
                                />
                                <div>
                                    <p>image Size must be lessthan 4 MB</p>
                                </div>
                            </div>
                            <div class="mb-2">
                                <button
                                    type="submit"
                                    id="btn"
                                    class="btn btn-success form-control"
                                >
                                    Post here
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-3"></div>
                </div>
            </div>
        </section>

        <!--Footer start here-->
        <%- include("./partials/footer.ejs") %>
        <!--Footer end here-->

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"
        ></script>
        <script>

            const nameinp = document.getElementById("nameinp");
            const quotesinp = document.getElementById("quotesinp");

            const warn1 = document.getElementById("warn1");
            const warn2 = document.getElementById("warn2");

            const btn = document.getElementById("btn");

            nameinp.addEventListener("keydown", checkNameLength);

            function checkNameLength() {
                const enterCharLength = nameinp.value.length;
                if (enterCharLength <= 25) {
                    nameinp.classList.add("error");
                    nameinp.style.backgroundColor = "white";
                    nameinp.style.outline = "2px solid #86b7fe";
                    btn.disabled = false;
                    warn1.style.color = "black";
                } else {
                    nameinp.classList.remove("error");
                    nameinp.style.backgroundColor = "darkred";
                    nameinp.style.outline = "2px solid darkred";
                    btn.disabled = true;
                    warn1.style.color = "darkred";
                    alert("Max 25 Character")
                }
            }

            quotesinp.addEventListener("mouseout", checkQuotesLength);

            function checkQuotesLength() {
                const quoteCharLen = quotesinp.value.length;
                if (quoteCharLen <= 100) {
                    quotesinp.classList.add("error");
                    quotesinp.style.backgroundColor = "white";
                    quotesinp.style.outline = "2px solid #86b7fe";
                    btn.disabled = false;
                    warn2.style.color = "black";
                } else {
                    quotesinp.classList.remove("error");
                    quotesinp.style.backgroundColor = "darkred";
                    quotesinp.style.outline = "2px solid darkred";
                    btn.disabled = true;
                    warn2.style.color = "darkred";
                    alert("Max 100 character")
                }
            }
        </script>
    </body>
</html>
