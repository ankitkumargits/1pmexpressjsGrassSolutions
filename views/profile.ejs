<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.0/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+SC:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <!--Header start here-->
    <%- include("./partials/header.ejs") %> 
    <section id="banner" class="pt-3">
        <div class="container">
            <div class="row">
                <div class="col-md-8"></div>
                <div class="col-md-4"></div>
            </div>
        </div>
        <img src="media/border1.png" alt="" id="banner-border">
    </section>
    <!--Header end here-->

    <section id="moredetails">
        <div class="container">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div>
                        <h2 class="text-center"><img style="width: 100px; border-radius: 50%;" src="/upload/<%=userData.profileImg%>" class="img-fluid" alt="loading..."> <%=username%>'s Profile</h2>
                    </div>
                    <form action="/profileupdate/<%=userData.id%>" method="post" enctype="multipart/form-data">

                            <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" name="username" value="<%=userData.username%>" aria-describedby="username" disabled>
                            </div>

                            <div class="mb-3">
                                <label for="fname" class="form-label">First Name</label>
                                <input type="text" class="form-control" name="fname" value="<%=userData.firstname%>" aria-describedby="fname">
                            </div>

                            <div class="mb-3">
                                <label for="lname" class="form-label">Last Name</label>
                                <input type="text" class="form-control" name="lname" value="<%=userData.lastname%>"  aria-describedby="lname">
                            </div>

                            <div class="mb-3">
                                <label for="dob" class="form-label">Date of Birth</label>
                                <input type="date" class="form-control" name="dob" value="<%=userData.dob%>" aria-describedby="dob">
                            </div>

                            <div class="mb-3">
                                <label for="email" class="form-label">Email address</label>
                                <input type="email" class="form-control" name="email" value="<%=userData.email%>" aria-describedby="email">
                            </div>

                            <div class="mb-3">
                                <label for="status" class="form-label">Status</label>
                                <input type="text" class="form-control" name="status" disabled value="<%=userData.status%>" aria-describedby="status">
                            </div>

                            <div class="mb-3">
                            <label for="role" class="form-label">Role</label>
                            <input type="text" class="form-control" name="role" disabled value="<%=userData.role%>" >
                            </div>

                            <div class="mb-3">
                                <label for="profileImg" class="form-label">Profile Image</label>
                                <input type="file" class="form-control" name="profileImg" id="profileImg" aria-describedby="profileImg" required>
                            </div>

                            <div>
                            <button type="submit" class="btn btn-primary form-control mb-3">Update Profile</button>
                            </div>

                    </form>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
    </section>

    <!--Footer start here-->
    <%- include("./partials/footer.ejs") %> 
        <!--Footer end here-->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>